{
  "manifest_version": 3,
  "name": "Tribal Wars Bot",
  "version": "1.2",
  "description": "Tribal Wars bot automatizado",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "host_permissions": [
    "https://*.tribalwars.net/*",
    "https://*.tribalwars.com.br/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.tribalwars.net/*",
        "https://*.tribalwars.com.br/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
